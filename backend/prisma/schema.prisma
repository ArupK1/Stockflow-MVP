// backend/prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// 1. Organization Context
model Organization {
  id        String    @id @default(uuid())
  name      String
  users     User[]
  products  Product[] // Relation: One Org has many Products
  createdAt DateTime  @default(now())
}

// 2. User & Authentication
model User {
  id             String       @id @default(uuid())
  email          String       @unique
  password       String
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id])
  createdAt      DateTime     @default(now())
}

// 3. Product Model
model Product {
  id                String       @id @default(uuid())
  organizationId    String
  organization      Organization @relation(fields: [organizationId], references: [id])
  name              String
  sku               String       
  description       String?
  quantity          Int          @default(0) // Quantity on Hand
  price             Float?       // Selling Price
  lowStockThreshold Int          @default(5) // Default global value
  createdAt         DateTime     @default(now())
  updatedAt         DateTime     @updatedAt
}